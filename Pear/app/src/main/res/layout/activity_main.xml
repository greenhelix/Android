<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenBackground"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="537dp"
        android:layout_height="816dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/pear01"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-36dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/main_liner_1"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_marginTop="115dp"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_main_head1"
            style="@style/headline_text"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="3dp"
            android:text="@string/main_head_text01" />

        <TextView
            android:id="@+id/tv_main_head2"
            android:layout_width="334dp"
            android:layout_height="33dp"
            android:layout_marginLeft="20dp"
            android:text="@string/main_head_text02"
            android:textColor="@color/head"
            android:textSize="25dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/main_liner_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_liner_1">

        <TextView
            android:id="@+id/tv_main_head3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="90dp"
            android:text="@string/main_head_text03"
            android:textColor="@color/head"
            android:textSize="20dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/main_liner_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_liner_2"
        >

        <Button
            android:id="@+id/btn_main_order_write"
            style="@style/main_big_btn_style"
            android:background="@drawable/basic_btn_shape"
            android:text="@string/main_btn_text01"
            />

        <Button
            android:id="@+id/btn_main_order_status"
            style="@style/main_big_btn_style"
            android:background="@drawable/basic_btn_shape"
            android:text="@string/main_btn_text02"
            android:layout_marginStart="15sp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/main_liner_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_liner_3"
        >
        <Button
            android:id="@+id/btn_main_static"
            style="@style/main_big_btn_style"
            android:background="@drawable/basic_btn_shape"
            android:text="@string/main_btn_text03"
            />

        <Button
            android:id="@+id/btn_main_direct"
            style="@style/main_big_btn_style"
            android:background="@drawable/basic_btn_shape"
            android:text="@string/main_btn_text04"
            android:layout_marginStart="15sp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/main_liner_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_liner_4"
        >
        <Button
            android:id="@+id/btn_main_setting"
            style="@style/main_small_btn_style"
            android:background="@drawable/basic_btn_shape"
            android:text="@string/main_btn_text05"
            />

        <Button
            android:id="@+id/btn_main_change_user"
            style="@style/main_small_btn_style"
            android:background="@drawable/basic_btn_shape"
            android:text="@string/main_btn_text06"
            android:layout_marginStart="15sp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>