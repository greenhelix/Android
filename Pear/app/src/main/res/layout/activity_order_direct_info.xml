<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenBackground"
    tools:context=".test.DirectOrderActivity"
    >

    <TextView
        android:id="@+id/tv_direct_head"
        style="@style/headline_text"
        android:text="@string/order_head_text"
        app:layout_constraintBottom_toTopOf="@+id/et_direct_sender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.50" />

    <TextView
        android:id="@+id/tv_direct_sender"
        style="@style/headline_text2"
        android:text="@string/order_sender_text"
        app:layout_constraintBottom_toTopOf="@+id/et_direct_sender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_direct_head" />

    <EditText
        android:id="@+id/et_direct_sender"
        style="@style/input_text_300"
        android:layout_marginBottom="3dp"
        android:autofillHints=""
        android:background="@drawable/basic_input_shape"
        android:hint="이름을 적어주세요."
        android:inputType="textAutoComplete"
        app:layout_constraintBottom_toTopOf="@+id/tv_direct_sender_tel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_direct_sender"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_direct_sender_tel"
        style="@style/headline_text2"
        android:text="@string/order_sender_tel_text"
        app:layout_constraintBottom_toTopOf="@+id/tel_linear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_direct_sender" />

    <LinearLayout
        android:id="@+id/tel_linear"
        style="@style/input_tel_linear"
        app:layout_constraintBottom_toTopOf="@+id/tv_order_direct_recipient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_direct_sender_tel">

        <EditText
            android:id="@+id/et_direct_sender_tel1"
            style="@style/input_text_85"
            android:background="@drawable/basic_input_shape"
            android:maxLength="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="ㅡ"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/et_direct_sender_tel2"
            style="@style/input_text_85"
            android:background="@drawable/basic_input_shape"
            android:inputType="phone"
            android:maxLength="4"
            android:nextFocusRight="@id/et_direct_sender_tel3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="ㅡ"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/et_direct_sender_tel3"
            style="@style/input_text_85"
            android:background="@drawable/basic_input_shape"
            android:inputType="phone"
            android:maxLength="4" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_order_direct_recipient"
        style="@style/headline_text2"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:text="@string/order_recipient_text"
        app:layout_constraintBottom_toTopOf="@+id/et_direct_recipient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_direct_recipient"
        style="@style/input_text_300"
        android:layout_marginTop="8dp"
        android:background="@drawable/basic_input_shape"
        android:hint="이름을 적어주세요."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_direct_recipient"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_order_direct_recipient_tel"
        style="@style/headline_text2"
        android:text="@string/order_recipient_tel_text"
        app:layout_constraintBottom_toTopOf="@+id/tel_linear2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_direct_recipient" />


    <LinearLayout
        android:id="@+id/tel_linear2"
        style="@style/input_tel_linear"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/address_linear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_direct_recipient">

        <EditText
            android:id="@+id/et_direct_recipient_tel1"
            style="@style/input_text_85"
            android:background="@drawable/basic_input_shape"
            android:maxLength="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="ㅡ"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/et_direct_recipient_tel2"
            style="@style/input_text_85"
            android:background="@drawable/basic_input_shape"
            android:inputType="phone"
            android:maxLength="4"
            android:nextFocusRight="@id/et_direct_sender_tel3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="ㅡ"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/et_direct_recipient_tel3"
            style="@style/input_text_85"
            android:background="@drawable/basic_input_shape"
            android:inputType="phone"
            android:maxLength="4" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/address_linear"
        style="@style/input_tel_linear"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/et_direct_address_num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_direct_address"
            style="@style/headline_text2"
            android:layout_marginRight="10dp"
            android:text="@string/order_address_text" />

        <Button
            android:id="@+id/btn_direct_address"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/basic_input_shape"
            android:backgroundTint="@color/grey_btn_color"
            android:text="주소찾기"

            />

    </LinearLayout>

    <EditText
        android:id="@+id/et_direct_address_num"
        style="@style/input_text_85"
        android:layout_marginBottom="8dp"
        android:background="@drawable/basic_input_shape"
        app:layout_constraintBottom_toTopOf="@+id/et_direct_address_show"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_direct_address_show"
        style="@style/input_text_300"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/basic_input_shape"
        app:layout_constraintBottom_toTopOf="@+id/et_direct_address_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_linear" />

    <EditText
        android:id="@+id/et_direct_address_detail"
        style="@style/input_text_300"
        android:layout_marginBottom="50dp"
        android:background="@drawable/basic_input_shape"
        app:layout_constraintBottom_toTopOf="@+id/btn_direct_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_direct_address_show"
        app:layout_constraintVertical_bias="0.28" />

    <Button
        android:id="@+id/btn_direct_before"
        style="@style/bottom_btn_before_style"
        android:background="@drawable/bottom_btn_shape"
        android:text="@string/before_btn_text"
        tools:ignore="MissingConstraints"
        />
    <Button
        android:id="@+id/btn_direct_next"
        style="@style/bottom_btn_next_style"
        android:background="@drawable/bottom_btn_shape"
        android:text="@string/after_btn_text"
        tools:ignore="MissingConstraints"
        />



</androidx.constraintlayout.widget.ConstraintLayout>