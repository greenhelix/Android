<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pearBackground">

    <TextView
        android:id="@+id/tv_direct_head"
        style="@style/headline_text"
        android:text="@string/order_head_text"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="40dp" />

    <TextView
        android:id="@+id/tv_direct_sender"
        style="@style/headline_text2"
        android:text="@string/order_sender_text"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="119dp" />

    <EditText
        android:id="@+id/et_direct_sender"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/white_btn_color"
        android:hint="이름을 적어주세요."
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="153dp" />

    <TextView
        android:id="@+id/tv_direct_sender_tel"
        style="@style/headline_text2"
        android:text="@string/order_sender_tel_text"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="200dp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="248dp">

        <Spinner
            android:id="@+id/sp_direct_sender_tel1"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:background="@color/white_btn_color"
            android:entries="@array/tel"
            />

        <EditText
            android:id="@+id/et_direct_sender_tel2"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:background="@color/white_btn_color" />

        <EditText
            android:id="@+id/et_direct_sender_tel3"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@color/white_btn_color" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_order_direct_recipient"
        style="@style/headline_text2"
        android:text="@string/order_recipient_text"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="300dp" />

    <EditText
        android:id="@+id/et_direct_recipient"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/white_btn_color"
        android:hint="이름을 적어주세요."
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="344dp" />

    <TextView
        android:id="@+id/tv_order_direct_recipient_tel"
        style="@style/headline_text2"
        android:text="@string/order_recipient_tel_text"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="400dp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="443dp">

        <Spinner
            android:id="@+id/sp_direct_recipient_tel1"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:background="@color/white_btn_color"
            android:entries="@array/tel" />

        <EditText
            android:id="@+id/et_direct_recipient_tel2"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:background="@color/white_btn_color" />

        <EditText
            android:id="@+id/et_direct_recipient_tel3"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@color/white_btn_color" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_direct_address"
        style="@style/headline_text2"
        android:text="@string/order_address_text"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="477dp" />

    <Button
        android:id="@+id/btn_direct_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주소찾기"
        tools:layout_editor_absoluteX="277dp"
        tools:layout_editor_absoluteY="470dp" />

    <TextView
        android:id="@+id/tv_direct_address_show"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/white_btn_color"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="518dp" />

    <Button
        android:id="@+id/btn_direct_before"
        style="@style/bottom_btn_before_style"
        android:background="@drawable/bottom_btn_shape"
        android:text="@string/before_btn_text"
        tools:ignore="MissingConstraints"
        />
    <Button
        android:id="@+id/btn_direct_next"
        style="@style/bottom_btn_next_style"
        android:background="@drawable/bottom_btn_shape"
        android:text="@string/after_btn_text"
        tools:ignore="MissingConstraints"
        />



</androidx.constraintlayout.widget.ConstraintLayout>