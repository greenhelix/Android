<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputJSON">

    <LinearLayout
        android:id="@+id/layout_BookMark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="360dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="북마크 JSON"
            android:textColor="#ffffff"
            android:background="@color/PolyLineColor1"/>

        <EditText
            android:id="@+id/tv_bmk"
            android:layout_width="360dp"
            android:layout_height="150dp"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:background="#0F0F0F"
            android:cursorVisible="true"
            android:inputType="textMultiLine"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="360dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="DRAW JSON"
            android:textColor="#ffffff"
            android:background="@color/PolyLineColor1"/>

        <EditText
            android:id="@+id/tv_draw"
            android:layout_width="360dp"
            android:layout_height="150dp"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:background="#0F0F0F"
            android:cursorVisible="true"
            android:inputType="textMultiLine"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_parser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#911FC2"
        android:src="@mipmap/menu_ic" />

</RelativeLayout>